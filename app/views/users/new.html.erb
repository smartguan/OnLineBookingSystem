<h1>Sign Up</h1>

<div class="box" id="login">
	<%= form_for :user do |f| %>

			<br />
			First Name <br />
			<%= f.text_field :first, :size => 24 %><br />

			Last Name<br />
			<%= f.text_field :last, :size => 24 %><br />

			Email<br />
			<%= f.text_field :email, :size => 24 %><br />

 			Date of Birth <br />
			<%= f.text_field :dob, :size => 24 %><br />
 
			Zipcode<br />
			<%= f.text_field :zip, :size => 24 %><br />

			Password <br />
			<%= f.password_field :password, :size => 24 %><br />

			Confirm Password<br />
			<%= f.password_field :password_confirmation, :size => 24 %><br />
			
			<%= f.submit %>

 	<%= render "shared/error_messages", :target => @user %>
	<% end %>
</div>